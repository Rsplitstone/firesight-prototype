# FireSight AI Environment Configuration
# Copy this file to .env and fill in your actual values

# NASA API Key for satellite data access
# Get your free API key at: https://firms.modaps.eosdis.nasa.gov/api/area/
NASA_API_KEY=bdf26045c9cb1b8129d98cb0e84b40f4

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///./firesight.db

# External API Keys
WEATHER_API_KEY=your_weather_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cache Configuration
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Data Processing
MAX_WORKERS=4
BATCH_SIZE=1000
DATA_RETENTION_DAYS=30
NASA_FIRMS_API_KEY=your_nasa_firms_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Model Configuration
MODEL_VERSION=v1.0
MODEL_CONFIDENCE_THRESHOLD=0.7

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_SMS_ENABLED=false
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts

# Monitoring Configuration
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com
